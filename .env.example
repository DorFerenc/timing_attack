# ============================================
# Timing Attack Configuration
# ============================================
# Copy this file to .env: cp .env.example .env
# ============================================

# ==========================================
# REQUIRED
# ==========================================
TARGET_USERNAME=316279942

# ==========================================
# SERVER
# ==========================================
USE_LOCAL_SERVER=true
SERVER_TIMEOUT=10
SERVER_MAX_RETRIES=3

# ==========================================
# ATTACK PARAMETERS
# ==========================================
ATTACK_DIFFICULTY=1
MAX_PASSWORD_LENGTH=51
CHARSET=abcdefghijklmnopqrstuvwxyz

# ==========================================
# PERFORMANCE & PARALLELIZATION
# ==========================================
# Enable parallel requests (true/false)
PARALLEL_REQUESTS=true

# Number of parallel worker threads
MAX_WORKERS=10

# Connection pool size
POOL_SIZE=10

# ==========================================
# SAMPLING STRATEGY
# ==========================================
# Number of timing samples to collect per character
# Lower = faster but less reliable
# Higher = slower but more accurate

# Samples for first 3 characters
INITIAL_SAMPLES=2

# Samples for characters 4-8
MIDDLE_SAMPLES=2

# Samples for characters 9+
FINAL_SAMPLES=2

# Minimum samples required
MIN_SAMPLES=2

# ==========================================
# STATISTICAL THRESHOLDS
# ==========================================
# Confidence level for statistical tests (0.0-1.0)
CONFIDENCE_LEVEL=0.51

# Minimum detectable time difference in seconds
MIN_TIME_DIFFERENCE=0.001

# Standard deviations for outlier removal
OUTLIER_STD_DEV=3

# ==========================================
# LOGGING
# ==========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to file (true/false)
LOG_TO_FILE=true

# Log file path
LOG_FILE=attack.log

# ==========================================
# EXAMPLES
# ==========================================
#
# Fast mode (less accurate):
# PARALLEL_REQUESTS=true
# MAX_WORKERS=15
# INITIAL_SAMPLES=5
# MIDDLE_SAMPLES=4
# FINAL_SAMPLES=3
#
# Accurate mode (slower):
# PARALLEL_REQUESTS=false
# INITIAL_SAMPLES=20
# MIDDLE_SAMPLES=15
# FINAL_SAMPLES=10
#
# Debug mode:
# LOG_LEVEL=DEBUG
# PARALLEL_REQUESTS=false
#
